{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "share": {
          "type": "share",
          "settings": {
          }
        },
        "b0bdc04f-f2be-48fe-899b-0b49018a58ee": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Technical info",
            "content": "<p><table style=\"width: 100%;\"><tr><td>Operating Principle:<\/td><td>{{ product.metafields.my_fields.operating_principle.value }}<\/td><\/tr><tr><td>Action:<\/td><td>{{ product.metafields.global.action.value }}<\/td><\/tr>{%- if product.metafields.global.actuation.value -%}<tr><td>Actuation Force:<\/td><td>{{ product.metafields.global.actuation.value }} cN<\/td><\/tr>{%- endif -%}{%- if product.metafields.global.bottomout.value -%}<tr><td>Bottom-out Force:<\/td><td>{{ product.metafields.global.bottomout.value }} cN<\/td><\/tr>{%- endif %}\n{%- if product.metafields.global.is_silenced.value -%}<tr><td>Bottom-out Force:<\/td><td>{{ product.metafields.global.is_silenced.value }} <\/td><\/tr>{%- endif %}\n\n{%- if product.metafields.my_fields.stem_type.value -%}<tr><td>Stem Type:<\/td><td>{{ product.metafields.my_fields.stem_type.value }}<\/td><\/tr>{%- endif %}\n\n{%- if product.metafields.my_fields.housing_material_top_.value -%}\n<tr><td>Top:<\/td><td>{%- if product.metafields.global.housingcolour.value -%}<svg width=\"20\" height=\"20\">\n<rect width=\"20\" height=\"20\" style=\"fill:{{ product.metafields.global.housingcolour.value }};stroke-width:3;stroke:rgb(0,0,0)\" \/><\/svg>{%- endif -%} &nbsp;{{ product.metafields.my_fields.housing_material_top_.value }}\n{%- endif %}\n\n\n{%- if product.metafields.my_fields.housing_material_bottom_.value -%}\n<tr><td>Top:<\/td><td>{%- if product.metafields.global.housingcolour.value -%}<svg width=\"20\" height=\"20\">\n<rect width=\"20\" height=\"20\" style=\"fill:{{ product.metafields.global.housingcolour.value }};stroke-width:3;stroke:rgb(0,0,0)\" \/><\/svg>{%- endif -%} &nbsp;{{ product.metafields.my_fields.housing_material_bottom_.value }}\n{%- endif %}\n\n\n<\/table><\/p>",
            "page": "",
            "icon": "ruler"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "subtitle",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "share",
        "b0bdc04f-f2be-48fe-899b-0b49018a58ee"
      ],
      "settings": {
        "enable_sticky_info": true,
        "enable_video_looping": false
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "image_ratio": "adapt",
        "show_secondary_image": false,
        "add_image_padding": false,
        "show_vendor": false
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
}
